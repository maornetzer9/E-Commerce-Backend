{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": "./src",
      "paths": {
        "@mylib/*": ["lib/*"]
      },
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts", 
      "services/user.ts"    
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  